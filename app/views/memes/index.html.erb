<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-info">
    <h1>Save any kind of meme</h1>
    <h3 class="typed-js" data-controller="typed-js"></h3>  <!-- This h3 tag if for JS? Not doing anything now -->
  </div>
</div>

<div class="container py-5 border border-dark">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0 text-center border">⬇️ Memes for rent!!! ⬇️</h3>
    <%= link_to "As a Joker, create a new meme to rent!", new_meme_path, class: "btn btn-flat border border-dark" %>
  </div>

  <div class="row">
    <% @memes.each do |meme| %>
      <div class="co-12 col-sm-6 col-md-4 mb-3" style="background-image: url('<%= image_path "bird-meme.jpg" %>')">
        <%= link_to "See this meme in more detail here", meme_path(meme.id), class:"text-decoration-none btn btn-primary" %>
          <div class="card-category">
            <p>Description: <%= meme.description %></p>
            <p>Price: <%=  meme.price %></p>
            <p>Belongs to User: <%= meme.user_id %></p>
          </div>
      </div>
    <% end %>
  </div>
</div>
<h2 class="text-primary m-4"><%= link_to "Go back to landing page", root_path %></h2>

