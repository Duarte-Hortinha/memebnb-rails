<div class="container mt-5"><%= link_to "Go back", memes_path, class: "btn btn-dark"  %> </div>

<div class="container py-5 specific-1">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3 class="h3 d-flex align-items-center justify-content-center">Create a new meme</h3>
        <%= simple_form_for @meme do |f| %>
          <%= f.input :title, placeholder: 'My garbage meme' %>
          <%= f.input :description, placeholder: 'This meme is garbage, no one will laugh at it' %>
          <%= f.input :price, placeholder: '$1,000' %>
          <!--<span><%= f.input :image, as: :file %></span>-->
          <%= f.input :photo, as: :file %>
         <div class="d-flex justify-content-center"> <%= f.submit class: "btn btn-info w-100" %> </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
