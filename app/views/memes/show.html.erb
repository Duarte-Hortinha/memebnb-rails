
<div class="container" id="showcontainer">
  <div id="showcard">
    <h5 class="card-title text-decoration-underline"><strong><%= @meme.title.capitalize %></strong></h5>
    <div class="card" style="width: 30rem; height; 40rem">
      <% if @meme.photo.key %>
        <%= cl_image_tag @meme.photo.key, crop: :fill, class: 'w-100' %>
      <% else %>
        <%= image_tag('bird-meme.jpg') %>
      <% end  %>
      <div class="card-body" id="showcardbody">
        <p class="card-text"><%= @meme.description%></p>
        <div id="credentials">
          <p class="card-text" id="text1"><strong>Price:</strong> $<%=  @meme.price %></p>
          <p class="card-text">Belongs to <em><%= @meme.user.email.split('@')[0] %></em></p>
        </div>
      </div>

    </div>
  </div>
  <div id="checkcontainer">
    <div class="card" id="bookingcard"style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><strong>Book this meme</strong></h5>
        <%= render "bookings/new" %>
      </div>
    </div>
  </div>
</div>
