<div class="container" id="bookingscont">
  <h1>My bookings</h1>
  <div class="container" id="listscont">
    <div class="container" id="pendingcont">
      <h3>Pending bookings</h3>
      <% if @pendingbookings.empty? %>
        <%= "You don't have any pending bookings yet, what are you waiting for!?" %>
      <% else %>
        <ul class="list-group list-group-flush">
          <% @pendingbookings.each do |booking| %>
            <li class="list-group-item list-group-item-light">
              <p><strong><%= booking.meme.title %></strong></p>
              <p> Booking start date: <%= booking.start_date %></p>
              <p> Booking expiry date: <%= booking.start_date %></p>
            </li>
            <p></p>
          <% end %>
        </ul>
      <% end %>
    </div>
    <div class="container" id="confirmedcont">
      <h3>Confirmed bookings</h3>
      <% if @confirmedbookings.empty? %>
        <%= "You don't have any confirmed bookings yet." %>
      <% else %>
        <ul class="list-group list-group-flush">
          <% @confirmedbookings.each do |booking| %>
            <li class="list-group-item list-group-item-success">
              <p><strong><%= booking.meme.title %></strong></p>
              <p> Booking start date: <%= booking.start_date %></p>
              <p> Booking expiry date: <%= booking.start_date %></p>
            </li>
            <p></p>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>
